{
  "ignore_dirs": [
    "node_modules",
    ".git",
    "dist",
    "build",
    "__pycache__",
    ".pytest_cache",
    "venv",
    ".venv",
    "env",
    ".env",
    "coverage_html_report",
    ".coverage",
    ".mypy_cache",
    ".tox",
    "htmlcov"
  ],
  "ignore_files": [
    "*.pyc",
    "*.log",
    ".DS_Store",
    "*.tmp",
    "*.swp",
    "package-lock.json",
    "yarn.lock",
    "Pipfile.lock",
    "uv.lock",
    "*.egg-info"
  ],
  "include_extensions": [
    ".py",
    ".js",
    ".ts",
    ".jsx",
    ".tsx",
    ".java",
    ".go",
    ".rs",
    ".cpp",
    ".c",
    ".h",
    ".rb",
    ".php",
    ".cs",
    ".vue",
    ".svelte",
    ".dart",
    ".kt",
    ".scala",
    ".clj"
  ],
  "ignore_hidden": true,
  "max_file_size": "1MB",
  "api_provider": "claude",
  "api_options": {
    "model": "claude-3-sonnet",
    "max_tokens": 4000,
    "append_system_prompt": "只输出JSON格式，严格按照Schema定义"
  },
  "cache_enabled": true,
  "parallel_workers": 1,
  "max_depth": 10,
  "verbose": false
}